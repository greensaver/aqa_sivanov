<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >

<suite name="Test Product Market methods" verbose="1" >
    <test name="Learn suit" >
        <groups>
            <define name="smoke"/>
            <define name="regression"/>
            <run>
                <exclude name="smoke"/>
                <include name="regression"/>
            </run>
        </groups>

        <classes>
            <class name="lesson_maven.ProductTest">
                <methods>
                    <exclude name="checkProductPricesAsString"></exclude>
                </methods>
            </class>
        </classes>
    </test>
</suite>